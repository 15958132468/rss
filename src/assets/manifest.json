{
    "manifest_version": 2,

    "name": "RSSHub Radar",
    "description": "Browser extension to detect available RSS and RSSHub for current page",
    "version": "0.1",
    "homepage_url": "https://docs.rsshub.app",

    "browser_action": {
        "default_icon": "rsshub.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"]
    }],
    "background" : {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}
