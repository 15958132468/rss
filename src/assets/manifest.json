{
    "manifest_version": 2,

    "name": "RSSHub radar",
    "description": "Detect available RSS and RSSHub",
    "version": "0.1",

    "browser_action": {
        "default_icon": "rsshub.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"]
    }],
    "background" : {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}
